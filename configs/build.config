# 基础架构（MT7621/Timecloud 必选）
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_thunder_timecloud=y

# 文件系统（适配16M闪存，修正警告）
CONFIG_TARGET_ROOTFS_SQUASHFS=y
# 根分区大小：14MB（适配16M闪存）
CONFIG_TARGET_ROOTFS_PARTSIZE=14
# SquashFS块大小：256KB（无单位后缀）
CONFIG_TARGET_SQUASHFS_BLOCK_SIZE=256

# 内核精简（其他配置不变）
CONFIG_KERNEL_DEBUG=n
CONFIG_KERNEL_KALLSYMS=n
CONFIG_KERNEL_BUILD_USER="Timecloud"

# ========== 禁用目标包（核心修改） ==========
# 1. 禁用IPv6 DHCP服务端（odhcpd-ipv6only）
CONFIG_PACKAGE_odhcpd-ipv6only=n
# 2. 禁用PPPoE拨号相关（ppp + ppp-mod-pppoe）
CONFIG_PACKAGE_ppp=n
CONFIG_PACKAGE_ppp-mod-pppoe=n
# 3. 禁用无线AP相关（wpad-basic-wolfssl，下载宝无无线网卡）
CONFIG_PACKAGE_wpad-basic-wolfssl=n

# 关闭防火墙（保留你的原有需求）
CONFIG_PACKAGE_fw3=n
CONFIG_PACKAGE_iptables=n
CONFIG_PACKAGE_ip6tables=n
CONFIG_PACKAGE_nftables=n
CONFIG_PACKAGE_luci-app-firewall=n

# 开启IPv6基础功能（仅保留客户端，无服务端）
CONFIG_PACKAGE_odhcp6c=y  # 仅保留IPv6 DHCP客户端（按需，也可设为n）
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_dnsmasq_full=y
CONFIG_PACKAGE_iputils-ping6=y

# 基础系统（仅保留必要组件）
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_fstools=y
CONFIG_PACKAGE/uci=y
CONFIG_PACKAGE_uclient-fetch=y

# 核心功能：Transmission + Samba
CONFIG_PACKAGE_transmission=y
CONFIG_PACKAGE_transmission-daemon=y
CONFIG_PACKAGE_transmission-web=y
CONFIG_PACKAGE_luci-app-transmission=y
CONFIG_PACKAGE_luci-i18n-transmission-zh-cn=y
CONFIG_PACKAGE_samba4-server=y
CONFIG_PACKAGE_luci-app-samba4=y
CONFIG_PACKAGE_luci-i18n-samba4-zh-cn=y
CONFIG_SAMBA4_IPV6=y

# LuCI界面（中文精简版）
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_LUCI_LANG_zh-cn=y
CONFIG_PACKAGE_luci-proto-ipv6=y

# 存储工具（USB3.0必备）
CONFIG_PACKAGE_usbutils=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb3=y

# 额外禁用依赖包（防止间接启用）
CONFIG_PACKAGE_wpad=n          # 彻底禁用wpad系列（包含wpad-basic-wolfssl）
CONFIG_PACKAGE_pppossl=n       # 禁用ppp的ssl扩展（避免依赖ppp）
CONFIG_PACKAGE_pppfilter=n     # 禁用ppp过滤（避免依赖ppp）
